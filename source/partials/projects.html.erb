<div class="row my-3">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2>Projects</h2>
        <div class="break-line"></div>
        <% data.projects.each do |project| %>
        <div class="d-flex cards my-3">
          <div class="card-image">
            <%= image_tag project.image, alt: "project image" %>
          </div>
          <div class="justify-content-start">
            <h3><%= project.name %></h3>
            <h5><%= project.role %></h5>
            <p><%= project.description %></p>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
