<div class="row my-3">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2>Projects</h2>
        <div class="break-line"></div>
        <% data.projects.each do |project| %>
        <div class="d-flex flex-column flex-md-row cards my-5">
          <%# Image has to be 1380x1020 %>
          <div class="card-image mx-auto ms-md-2 w-100">
            <%= image_tag project.image, alt: "project image", class: "img-fluid" %>
          </div>
          <div class="d-flex flex-column justify-content-start mx-auto ms-md-5 my-auto card-detail w-100">
            <h3 class="mb-3"><%= project.name %></h3>
            <h5 class="mb-4"><%= project.role %></h5>
            <p><%= project.description %></p>
          </div>
          <div class="d-flex button-project">
            <% link_to project.github, target: '_blank' do %>
              <i class="fa-brands fa-github"></i>
            <% end %>
          </div>
          <div class="d-flex button-project">
            <% if project.online?  %>
              <% link_to project.url, target: '_blank' do %>
                <i class="fas fa-external-link-alt"></i>
              <% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
